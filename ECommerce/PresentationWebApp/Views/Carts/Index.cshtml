
@model IEnumerable<ECommerce.Application.ViewModels.CartViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Cart</h1>

    @if (Model.Count() != 0)
    {
        <br>
        @Html.Partial("ProductViewPartial")
    }
    else
    {
        <br>
        <h2>Your cart is empty! Try adding something.</h2>
    }

</div>