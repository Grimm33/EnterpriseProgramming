<div class="row">
    <div class="col-6">
        <form class="form-inline" method="post" action="/Products/Search">

            <div class="form-group mb-2">
                <label class="sr-only">Search: </label>
            </div>

            <div class="form-group mx-sm-3 mb-2">
                <input type="text" class="form-control" placeholder="Type your keyword here" name="keyword">
            </div>

            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>
    </div>
    <div class="col-6">
        <form class="form-inline" method="post" action="/Products/SearchByCategory">
            <div class="form-group mx-sm-3 mb-2">
                <select class="custom-select" name="categoryID">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>   
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>
    </div>
</div>